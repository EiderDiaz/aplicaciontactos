<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.lomeli.listview.MainMensaje">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="100px"
        android:text="Nombre Contacto"
        android:id="@+id/txtMensajeNombre"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="80px"
        android:text="NÃºmero"
        android:id="@+id/txtCelularMensaje"
        android:layout_below="@id/txtMensajeNombre"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:id="@+id/edtxtMensaje"
        android:layout_below="@id/txtCelularMensaje"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:id="@+id/btnEnviarMensaje"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_alignParentRight="true"
            android:text="Enviar"
            android:layout_marginRight="30px"
            android:layout_marginBottom="30px"
            android:src="@drawable/email"
/>

        <!--<Button
            android:id="@+id/btnCancelarMensaje"
            android:layout_width="520px"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Cancelar"
            android:background="#325975"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="50px"/>-->

    </RelativeLayout>


</RelativeLayout>
