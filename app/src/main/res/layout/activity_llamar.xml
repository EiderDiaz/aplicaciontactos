<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lomeli.listview.MainLlamar">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="80px"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/mensaje"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="---"
        android:textSize="100px"
        android:textAlignment="center"
        android:id="@+id/textViewMostrarNombre"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textSize="80px"
        android:textStyle="bold"
        android:id="@+id/textViewMostrarCelular"
           />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="800px"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/imgBotonLlamar"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_marginRight="50px"
            android:src="@drawable/telefono" />

        <ImageView
            android:id="@+id/buttonMensaje"
            android:layout_width="300px"
            android:layout_height="300px"

            android:src="@drawable/email" />


    </LinearLayout>


